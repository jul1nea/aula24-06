
def contar_vogais_consoantes(frase)
    vogais = "aeiouAEIOU"
    num_vogais = 0
    num_consoantes = 0

    for char in frase:
        if char.isalpha()
            if char in vogais:
                num_vogais +=1
            else:
                num_consoantes +=1

    return num_vogais, num_consoantes

if __name__ == "__main__":
    frase = input("Digite uma frase:")
    vogais, consoantes = contar_vogais_consoantes(frase)
    print(f"Número de vogais: {voagais}")
    print (f"Número de consoantes:{consoantes}")
